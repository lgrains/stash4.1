= simple_form_for @listing, :html => { :class => 'form-horizontal' } do |f|
  = f.input :user_id
  = f.input :name
  = f.input :listing_type
  = f.input :status
  = f.input :description
  = f.input :length
  = f.input :length_units
  = f.input :width
  = f.input :width_units
  = f.input :price
  = f.input :colors
  = f.input :image
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), listings_path, :class => 'btn'
