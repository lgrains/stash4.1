- model_class = Listing
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:listing_type)
      %th= model_class.human_attribute_name(:status)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:length)
      %th= model_class.human_attribute_name(:length_units)
      %th= model_class.human_attribute_name(:width)
      %th= model_class.human_attribute_name(:width_units)
      %th= model_class.human_attribute_name(:price)
      %th= model_class.human_attribute_name(:colors)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @listings.each do |listing|
      %tr
        %td= link_to listing.id, listing_path(listing)
        %td= listing.user_id
        %td= listing.name
        %td= listing.listing_type
        %td= listing.status
        %td= listing.description
        %td= listing.length
        %td= listing.length_units
        %td= listing.width
        %td= listing.width_units
        %td= listing.price
        %td= listing.colors
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_listing_path(listing), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), listing_path(listing), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_listing_path, :class => 'btn btn-primary'
