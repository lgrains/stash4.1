%header#top-nav.navbar
  .navbar-inner
    .container
      .row
        .span12
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href="/")
            = image_tag("headline.png", size: "450x450>")
            - if current_user.present?
              %ul.nav.pull-right
                %li#account-links.dropdown
                  %a{:href=> "#", :class => "dropdown-toggle", "data-toggle" => "dropdown" }
                    = current_user.email
                    %b.caret
                    %ul.dropdown-menu
                      %li= link_to "Listings", listings_path
                      %li= link_to "My Account", edit_user_path(current_user.id)
                %li.top-nav= link_to "Logout", destroy_user_session_path, method: :delete
            - else
              %ul.nav.pull-right
                %li.top-nav-stress
                  = link_to "Log in", new_user_session_path
                %li.top-nav-stress
                  = link_to "Sign Up", new_user_registration_path