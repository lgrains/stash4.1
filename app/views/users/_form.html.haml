= simple_form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = "#{pluralize(@address.errors.count, 'error')} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  = render :partial => "user_fields", :locals => {:f => f}
  = f.submit
  %span
    = link_to 'Cancel', :back